{
    "name": "spatie/php-cloneable",
    "description": "A trait that allows you to clone readonly properties in PHP 8.1",
    "keywords": [
        "spatie",
        "php_cloneable"
    ],
    "homepage": "https://github.com/spatie/php-cloneable",
    "license": "MIT",
    "authors": [
        {
            "name": "Brent Roose",
            "email": "brent@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Cloneable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Cloneable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
